<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:padding="50dp" android:shape="rectangle">
            <solid android:color="@color/darkest_yellow" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_checked="false" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:padding="50dp" android:shape="rectangle">
            <solid android:color="@color/darker_yellow" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:padding="50dp" android:shape="rectangle">
            <solid android:color="@color/grey3" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:padding="50dp" android:shape="rectangle">
            <solid android:color="@color/yellow" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>