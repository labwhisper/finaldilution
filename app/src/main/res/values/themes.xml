    <style name="FinalDilutionTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/colorAccent
        </item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">@color/colorAccent
