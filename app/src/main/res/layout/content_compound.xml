<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.druidpyrcel.biotech.finaldilution.view.CompoundActivity"
    tools:showIn="@layout/activity_choose_compound">

    <View
        android:id="@+id/secondView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerVertical="true" />

    <HorizontalScrollView
        android:id="@+id/desiredConcHorizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/secondView"
        android:layout_alignEnd="@+id/secondView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/secondView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/desiredPercentageConcButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight=".25"
                android:text="%" />

            <Button
                android:id="@+id/desiredMolarConcButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight=".25"
                android:text="mol" />

            <Button
                android:id="@+id/desiredMilimolarConcButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight=".25"
                android:text="mMOL" />

            <Button
                android:id="@+id/desiredMgMlConcButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight=".25"
                android:text="mg/ml" />
        </LinearLayout>
    </HorizontalScrollView>

    <EditText
        android:id="@+id/desiredConcEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/desiredConcHorizontalScrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/desiredConcTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/desiredConcEditText"
        android:layout_alignEnd="@+id/desiredConcEditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/desiredConcEditText"
        android:text="Desired concentration"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/enableStockDilutionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/secondView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/secondView"
        android:layout_below="@+id/secondView"
        android:layout_marginTop="33dp"
        android:clickable="false"
        android:text="Dilution from stock" />

    <TextView
        android:id="@+id/stockConcTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/enableStockDilutionButton"
        android:text="Stock concentration"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/stockConcEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stockConcTextView"
        android:clickable="false"
        android:ems="10"
        android:inputType="number" />

    <HorizontalScrollView
        android:id="@+id/stockConcScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/secondView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/secondView"
        android:layout_below="@+id/stockConcEditText">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/stockPercentageConcButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight=".25"
                android:clickable="false"
                android:text="%" />

            <Button
                android:id="@+id/stockMolarConcButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight=".25"
                android:clickable="false"
                android:text="mol" />

            <Button
                android:id="@+id/stockMilimolarConcButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight=".25"
                android:clickable="false"
                android:text="mMOL" />

            <Button
                android:id="@+id/stockMgMlConcButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight=".25"
                android:clickable="false"
                android:text="mg/ml" />
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>
